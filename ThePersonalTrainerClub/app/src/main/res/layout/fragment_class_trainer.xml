<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:background="@color/darkGray"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/med_dp"
            android:layout_marginEnd="@dimen/med_dp"
            android:layout_marginStart="@dimen/med_dp"
            android:background="@color/darkGray"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="@dimen/med_dp">

            <LinearLayout
                android:layout_height="100dp"
                android:layout_weight="4"
                android:background="@color/darkGray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_name_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/med_dp"
                    android:text="@string/fragment_class_sport"
                    android:textAlignment="center"
                    android:textColor="@color/text"
                    android:textSize="17sp"
                    tools:text="Balonmano" />

                <ImageView
                    android:id="@+id/image_sport_class"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/med_dp"
                    app:srcCompat="@drawable/ic_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/darkGray"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/ic_location" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/ic_icon" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/ic_icon" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/ic_icon" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/ic_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@color/darkGray"
                android:orientation="vertical">

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/text_location_class"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="@string/fragment_class_name_location"
                    android:textColor="@color/text"
                    tools:text='Gimnasio "El gran atardecer"' />

                <TextView
                    android:id="@+id/text_date_class"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="@string/fragment_class_date"
                    android:textColor="@color/text"
                    tools:text="12 Septiembre 2018" />

                <TextView
                    android:id="@+id/text_time_class"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="@string/fragment_class_time"
                    android:textColor="@color/text"
                    tools:text="De 16:00 a 17:00" />

                <TextView
                    android:id="@+id/text_number_pupils_class"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="@string/fragment_class_number_user"
                    android:textColor="@color/text"
                    tools:text="Alumnos ( 12/20 )" />

                <TextView
                    android:id="@+id/text_price_class"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="@string/fragment_class_price"
                    android:textColor="@color/text"
                    tools:text="10â‚¬ / clase" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/med_dp"
            android:layout_marginLeft="@dimen/med_dp"
            android:layout_marginRight="@dimen/med_dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_coach_class"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    app:srcCompat="@drawable/ic_icon" />

                <LinearLayout
                    android:layout_width="116dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/text_name_coach_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_class_name_instructor"
                        android:textColor="@color/text" />

                    <TextView
                        android:id="@+id/text_lastname_coach_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_class_lastname_instructor"
                        android:textColor="@color/text" />
                </LinearLayout>

                <Button
                    android:id="@+id/button_vote_class"
                    style="?attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/fragment_button_vote"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/button_cancel_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/fragment_button_cancel" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>